<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RobotoRegular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RobotoMedium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="RobotoBold">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RobotoLight">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    ---------------------

    <style name="RobotoRegular.SizeS">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RobotoRegular.SizeL">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RobotoRegular.SizeXL">
        <item name="android:textSize">16sp</item>
    </style>

    ---------------------------------------------------

    <style name="RobotoMedium.SizeS">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RobotoMedium.SizeL">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RobotoMedium.SizeXL">
        <item name="android:textSize">16sp</item>
    </style>

    ---------------------------------------------------

    <style name="RobotoBold.SizeS">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RobotoBold.SizeL">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RobotoBold.SizeXL">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RobotoBold.SizeXXL">
        <item name="android:textSize">18sp</item>
    </style>

    ---------------------------------------------------

    <style name="RobotoLight.SizeS">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RobotoLight.SizeL">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RobotoLight.SizeXL">
        <item name="android:textSize">16sp</item>
    </style>

    ---------------------------------------------------

    <style name="CustomTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/green</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

</resources>